<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:minWidth="350dp"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".EffectsDialogFragment">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/bg_close"
        android:padding="5dp"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/btn_close" />

    <TextView
        android:id="@+id/tv_effects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Yep it's a Dialog"
        android:textColor="#717171"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Yep it's a Dialog" />

    <Button
        android:id="@+id/btn_effects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="12dp"
        android:text="Click Me"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>